<!-- Cart Content Section -->
<div class="container my-5">
  <h2 class="mb-4">Your Cart</h2>
  <!-- Cart Items Table -->
  <div class="table-responsive">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col">Product</th>
          <th scope="col">Quantity</th>
          <th scope="col">Price</th>
          <th scope="col">Total</th>
          <th scope="col">Remove</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="product-card">Product 1</td>
          <td>
            <input type="number" class="form-control" value="1" min="1" />
          </td>
          <td>$10.00</td>
          <td>$10.00</td>
          <td>
            <button class="btn btn-danger">Remove</button>
          </td>
        </tr>
        <tr>
          <td class="product-card">Product 2</td>
          <td>
            <input type="number" class="form-control" value="2" min="1" />
          </td>
          <td class="card-price">$15.00</td>
          <td class="card-price">$30.00</td>
          <td>
            <button class="btn btn-danger">Remove</button>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <!-- Cart Total -->
  <div class="d-flex justify-content-end">
    <h4 class="total-price">Total: $40.00</h4>
  </div>
  <!-- Checkout Button -->
  <div class="d-flex justify-content-end mt-3">
    <button
      id="checkout-button"
      data-user-email="samueletling@gmail.com"
      class="btn btn-success"
    >
      Proceed to Checkout
    </button>
    <!-- add {{email}} to data-user-email -->
  </div>
</div>